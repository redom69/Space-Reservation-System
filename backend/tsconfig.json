{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../frontend/dist", // Carpeta de salida en la raíz del proyecto
    "rootDir": ".", // Directorio raíz para los archivos fuente
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"],
      "@utils/*": ["src/utils/*"],
      "@middleware/*": ["src/middleware/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "routes/**/*.ts",
    "utils/**/*.ts",
    "src/@types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
